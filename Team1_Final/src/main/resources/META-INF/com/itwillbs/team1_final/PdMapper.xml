<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itwillbs.team1_final.mapper.PdMapper">

	<insert id="insertPd">
		
		INSERT
			INTO product
			VALUES (
				null
				,#{PRODUCT_NAME	}
				,#{PRODUCT_GROUP_BOTTOM_CD	}
				,#{SIZE_DES}
				,#{UNIT}
				,#{BARCODE}
				,#{IN_UNIT_PRICE}
				,#{OUT_UNIT_PRICE}
				,#{PRODUCT_TYPE_CD}
				,#{BUSINESS_NO}
				,#{PRODUCT_IMAGE}
				,#{REMARKS}
				)
	</insert>

	<select id="selectPd_group_bottom_Search" resultType="com.itwillbs.team1_final.vo.PdVO">
		SELECT PRODUCT_GROUP_TOP_CD,PRODUCT_GROUP_BOTTOM_CD,PRODUCT_GROUP_BOTTOM_NAME FROM product_bottom WHERE PRODUCT_GROUP_BOTTOM_NAME LIKE '%${keyword}%';
	</select>
	
	<!-- 전체 게시물 목록 조회하는 select 태그 -->
	<select id="selectPdList" resultType="com.itwillbs.team1_final.vo.PdVO" parameterType="String">
		SELECT *
			FROM product -- 이후 작업 분기 일어남
		
	</select>
	


</mapper>
