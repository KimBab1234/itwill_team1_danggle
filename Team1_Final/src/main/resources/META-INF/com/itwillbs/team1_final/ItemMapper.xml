<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itwillbs.team1_final.mapper.ItemMapper">

	<insert id="insertItem">
		INSERT
			INTO item
			VALUES (
				#{ITEM_CD}
				,#{ITEM_NAME}
				,#{ITEM_GROUP}
				,#{ITEM_STANDARD}
				,#{ITEM_BARCODE}
				,#{ITEM_IN_COST}
				,#{ITEM_OUT_COST}
				,#{ITEM_GUBUN}
				,#{ITEM_IMAGE}
				)
	</insert>

	<!-- 전체 게시물 목록 조회하는 select 태그 -->
	<select id="selectItemList" resultType="com.itwillbs.team1_final.vo.ItemVO" parameterType="String">
		SELECT *
			FROM item -- 이후 작업 분기 일어남
		
	</select>
	


</mapper>
